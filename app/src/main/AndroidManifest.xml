<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kz.example.myapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".content.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".content.LikesActivity"
            android:exported="false" />
        <activity
            android:name=".content.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".splash.MainActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authorization.LoginActivity"
            android:exported="false" />
        <activity android:name=".authorization.AuthorizationActivity" />
        <activity android:name=".content.TempActivity" />
        <activity android:name=".content.HomePageActivity" />
        <activity
            android:name=".content.MovieDetailActivity"
            android:exported="false" />
    </application>

</manifest>